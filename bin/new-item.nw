<<function spaces_to_underscore>>=
spaces_to_underscore(){
    head=
    tail=${1}
    acc=
    while true; do
        head=${tail%% *}
        tail=${tail#* }
        acc=${acc:+${acc}_}${head}
        if [ x"${tail}" = x"${head}" ]; then
            # didn't advance
            break;
        fi
    done
    echo "${acc}"
}
@

